<% @posts.each do |post| %>
	<article>
		<header>
		  <hgroup>
				<h2><%= post.title %></h2>
		    <h3><%= post.date %></h3>
		  </hgroup>
		</header>
		<section>
	  	<%=raw post.content %>
		</section>
		<footer>
	    <%= link_to 'Show', post %>
	    <%= link_to 'Edit', edit_post_path(post) %>
			<%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
		</footer>
	</article>
<% end %>

<%= link_to 'New Post', new_post_path %>
